<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>
<div>
  <% @new_tasks.each do |task| %>
    <ul>
      <li>
        <%= link_to task.title, task, class: "status-#{task.status}" %>
        <%= task.created_at.strftime("%Y年%m月%d日") %>
      </li>
    </ul>
  <% end %>
</div>
<%= link_to '登録する', new_task_path %>
<%= link_to '非表示一覧', tasks_hide_path %>